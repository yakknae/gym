---
// src/layouts/Layout.astro
import Sidebar from "../../src/components/sidebar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;

        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        overflow: hidden;
      }

      /* Scrollbar personalizada */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::selection {
        background-color: #ff6b35;
        color: white;
      }
      ::-webkit-scrollbar-track {
        background: #1a1a1a;
      }

      ::-webkit-scrollbar-thumb {
        background: #ff6b35;
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #ff8555;
      }
    </style>
  </head>
  <body class="bg-[#0f0f0f] text-white h-screen overflow-hidden">
    <!-- Flex container horizontal -->
    <div class="flex h-full gap-4">
      <!-- Sidebar -->
      <Sidebar />

      <!-- Contenido principal -->
      <div class="flex-1 flex flex-col overflow-hidden bg-[#161616] shadow-2xl">
        <!-- Header superior -->
        <header
          class="bg-[#1a1a1a] border-b border-orange-500/30 px-8 py-5 shadow-lg flex-shrink-0 items-center justify-center flex"
        >
          <h1 class="text-2xl font-bold text-white tracking-tight uppercase">{title}</h1>
        </header>

        <!-- Main Content con scroll -->
        <main class="flex-1 overflow-y-auto px-8 py-8 custom-scrollbar">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
